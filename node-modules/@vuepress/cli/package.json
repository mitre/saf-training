{
  "name": "@vuepress/cli",
  "version": "2.0.0-rc.0",
  "description": "CLI package of VuePress",
  "keywords": [
    "vuepress",
    "cli"
  ],
  "homepage": "https://github.com/vuepress",
  "bugs": {
    "url": "https://github.com/vuepress/vuepress-next/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuepress/vuepress-next.git"
  },
  "license": "MIT",
  "author": "meteorlxy",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./bin": "./dist/vuepress.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vuepress-cli": "./bin/vuepress.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "dependencies": {
    "cac": "^6.7.14",
    "chokidar": "^3.5.3",
    "envinfo": "^7.11.0",
    "esbuild": "~0.19.5",
    "@vuepress/core": "2.0.0-rc.0",
    "@vuepress/utils": "2.0.0-rc.0",
    "@vuepress/shared": "2.0.0-rc.0"
  },
  "devDependencies": {
    "@types/envinfo": "^7.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "clean": true,
    "dts": "./src/index.ts",
    "entry": [
      "./src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "outDir": "./dist",
    "sourcemap": false,
    "target": "es2022",
    "tsconfig": "../tsconfig.dts.json"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist"
  }
}